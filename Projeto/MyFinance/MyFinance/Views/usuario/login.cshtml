@model usuarioModel

@{

    Layout = "../Shared/_LayoutLogin.cshtml";

}


<div class="container" style="background-color:rgba(233, 233, 233, 0.67); border-radius: 10px; padding:20px; width:300px">
    @{
        try
        {
            if (TempData["MensagemLoginInvalido"].ToString() != null)
            {
                <div class="alert alert-danger">
                    <strong>Atenção! </strong>@TempData["MensagemLoginInvalido"]
                </div>
            }

        }
        catch { }
    }
    <form asp-coontroller="Usuario" asp-action="ValidarLogin">
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" class="form-control" asp-for="Email">
        </div>
        <div class="form-group">
            <label for="pwd">Senha:</label>
            <input type="password" class="form-control" asp-for="Senha">
        </div>
        <div class="checkbox">
            <label><input type="checkbox"> Lembrar Acessso</label>
        </div>
        <button type="submit" class="btn btn-default btn-block">Entrar</button>
        <button type="submit" class="btn btn-primary btn-block" onclick="javascript:window.location.href='../Usuario/Registrar'">Registrar</button>
    </form>
</div>
