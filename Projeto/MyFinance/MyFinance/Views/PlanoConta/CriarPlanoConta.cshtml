@model PlanoContasModel

@{
    ViewData["Title"] = "CriarPlanoConta";
}

<h3>Criar Plano Conta</h3>

@{
    var vId = 0;
    var vDescricao = "";
    var vTipo = "";

    try {
        vId = int.Parse(@ViewBag.Registro.Id.ToString());
        vDescricao = @ViewBag.Registro.Descricao.ToString();
        vTipo = @ViewBag.Registro.Tipo.ToString();
    }
    catch { }
}

<form asp-controller="PlanoConta" asp-action="CriarPlanoConta">
    <input type="hidden" asp-for="Id" value="@vId" />

    <div class="form-group">
        <label>Descricao:</label>
        <input type="text" class="form-control" asp-for="Descricao" value="@vDescricao">
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Tipo:</label>

        @{
            if (vTipo == "Receita")
            {
                <div class="radio"><label><input type="radio" asp-for="Tipo" value="Receita" checked />Receita</label></div>
                <div class="radio"><label><input type="radio" asp-for="Tipo" value="Despesa" unchecked />Despesa</label></div>
            }
            else
            {
                <div class="radio"><label><input type="radio" asp-for="Tipo" value="Receita" unchecked />Receita</label></div>
                <div class="radio"><label><input type="radio" asp-for="Tipo" value="Despesa" checked />Despesa</label></div>
            }
        }


    </div>


    <button type="submit" class="btn-success btn-block">Criar</button>
</form>
